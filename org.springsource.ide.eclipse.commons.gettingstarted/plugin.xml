<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<extension 
     point="org.eclipse.ui.importWizards"> 
      <wizard
            category="org.springsource.ide.eclipse.gettingstarted.wizards.import.category"
            class="org.springsource.ide.eclipse.commons.gettingstarted.wizard.guides.GSImportWizard"
            icon="resources/icons/guide-import.png"
            id="org.springsource.ide.eclipse.gettingstarted.wizards.import.generic"
            name="Getting Started Content"> 
         <description> 
            An import wizards that imports code associated with a Spring Getting Started Guide
         </description> 
         <selection class="org.eclipse.core.resources.IResource"/> 
      </wizard>
      
      <category
            id="org.springsource.ide.eclipse.gettingstarted.wizards.import.category"
            name="Spring">
      </category> 
</extension>

<extension 
     point="org.eclipse.ui.newWizards">
   <wizard
         category="org.springframework.ide.eclipse.beans.ui.wizards.category"
         icon="resources/icons/new-spring-boot.png"
         class="org.springsource.ide.eclipse.commons.gettingstarted.wizard.boot.NewSpringBootWizard"
         hasPages="true"
         id="org.springsource.ide.eclipse.commons.gettingstarted.wizard.boot.NewSpringBootWizard"
         name="Spring Boot Starter"
         project="true">
       <description>Create new Spring Boot Project via the Spring Initializr Web Service</description>
   </wizard>
</extension>

 
 <!-- New dashboard -->
 
	<extension point="org.eclipse.ui.editors">
		<editor
			class="org.springsource.ide.eclipse.commons.gettingstarted.dashboard.DashboardEditor"
			icon="resources/icons/dashboard_16.png"
			id="org.springsource.ide.eclipse.commons.gettingstarted.dashboard.DashboardEditor"
			name="Dashboard">
		</editor>
	</extension>
 <extension
       point="org.eclipse.debug.ui.launchShortcuts">
    <shortcut
          class="org.springsource.ide.eclipse.commons.gettingstarted.boot.BootLaunchShortcut"
          description="Run or Debug as a Standalone Spring Boot Application"
          id="org.springsource.ide.eclipse.boot.BootLaunchShortcut"
          label="Spring Boot App"
          modes="run, debug">
        <contextualLaunch>
           <enablement>
             <count value="1"/>
             <iterate>
           	   <adapt type="org.eclipse.core.resources.IProject">
           	      <test
                        property="org.springsource.ide.eclipse.boot.isBootProject"
                        value="true">
           	      </test>
           	   </adapt>
             </iterate>
           </enablement>
        </contextualLaunch>
        <configurationType
               id="org.eclipse.jdt.launching.localJavaApplication">
         </configurationType>
        <description
               description="Run as Spring Boot App"
               mode="run">
         </description>
         <description
               description="Debug as Spring Boot App"
               mode="debug">
         </description>
    </shortcut>
 </extension>
 <extension
       point="org.eclipse.core.expressions.propertyTesters">
    <propertyTester
          class="org.springsource.ide.eclipse.commons.gettingstarted.boot.BootPropertyTester"
          id="org.springsource.ide.eclipse.commons.gettingstarted.boot.BootPropertyTester"
          namespace="org.springsource.ide.eclipse.boot"
          properties="isBootProject"
          type="org.eclipse.core.resources.IProject">
    </propertyTester>
 </extension>
 <extension
       point="org.eclipse.ui.commands">
    <command
          defaultHandler="org.springsource.ide.eclipse.commons.gettingstarted.boot.BootLaunchCommand"
          description="Launch Spring Boot App"
          id="org.springsource.ide.eclipse.boot.launch.command"
          name="Launch">
    </command>
    <command
          defaultHandler="org.springsource.ide.eclipse.commons.gettingstarted.dashboard.ShowDashboardCommand"
          description="Show Dashboard"
          id="org.springsource.ide.eclipse.dashboard.command"
          name="Dashboard">
    </command>
 </extension>
 <extension
       point="org.eclipse.ui.menus">
    <menuContribution
          allPopups="false"
          locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
       <toolbar
             id="org.springsource.ide.eclipse.spring.toolbar"
             label="Spring Toolbar">
          <command
                commandId="org.springsource.ide.eclipse.dashboard.command"
                icon="resources/icons/springsource.png"
                style="push"/>
          <command
                commandId="org.springsource.ide.eclipse.boot.launch.command"
                id="org.springsource.ide.eclipse.boot.launch.command.menu"
                icon="resources/icons/lrun_obj.gif"
                style="pulldown">
          </command>
       </toolbar>
    </menuContribution>
    <menuContribution
          locationURI="menu:org.springsource.ide.eclipse.boot.launch.command.menu">
      <command
            commandId="org.springsource.ide.eclipse.dashboard.command"
            icon="resources/icons/springsource.png"
            label="Test"
            style="push"/>
       <dynamic
             class="org.springsource.ide.eclipse.commons.gettingstarted.boot.RelaunchMenuProvider"
             id="org.springsource.ide.eclipse.commons.gettingstarted.dynamic1">
       </dynamic>
    </menuContribution>
 </extension>
 
