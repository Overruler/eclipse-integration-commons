<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
 
 <!-- New dashboard -->
 
	<extension point="org.eclipse.ui.editors">
		<editor
			class="org.springsource.ide.eclipse.commons.gettingstarted.dashboard.DashboardEditor"
			icon="resources/icons/dashboard_16.png"
			id="org.springsource.ide.eclipse.commons.gettingstarted.dashboard.DashboardEditor"
			name="Dashboard">
		</editor>
	</extension>
 <extension
       point="org.eclipse.debug.ui.launchShortcuts">
    <shortcut
          class="org.springsource.ide.eclipse.commons.gettingstarted.boot.BootLaunchShortcut"
          description="Run or Debug as a Standalone Spring Boot Application"
          id="org.springsource.ide.eclipse.boot.BootLaunchShortcut"
          label="Spring Boot App"
          modes="run, debug">
        <contextualLaunch>
           <enablement>
             <count value="1"/>
             <iterate>
           	   <adapt type="org.eclipse.core.resources.IProject">
           	      <test
                        property="org.springsource.ide.eclipse.boot.isBootProject"
                        value="true">
           	      </test>
           	   </adapt>
             </iterate>
           </enablement>
        </contextualLaunch>
        <configurationType
               id="org.eclipse.jdt.launching.localJavaApplication">
         </configurationType>
        <description
               description="Run as Spring Boot App"
               mode="run">
         </description>
         <description
               description="Debug as Spring Boot App"
               mode="debug">
         </description>
    </shortcut>
 </extension>
 <extension
       point="org.eclipse.core.expressions.propertyTesters">
    <propertyTester
          class="org.springsource.ide.eclipse.commons.gettingstarted.boot.BootPropertyTester"
          id="org.springsource.ide.eclipse.commons.gettingstarted.boot.BootPropertyTester"
          namespace="org.springsource.ide.eclipse.boot"
          properties="isBootProject"
          type="org.eclipse.core.resources.IProject">
    </propertyTester>
 </extension>
 <extension
       point="org.eclipse.ui.commands">
    <command
          defaultHandler="org.springsource.ide.eclipse.commons.gettingstarted.boot.BootLaunchCommand"
          description="Launch Spring Boot App"
          id="org.springsource.ide.eclipse.boot.launch.command"
          name="Launch">
    </command>
<!--    <command
          defaultHandler="org.springsource.ide.eclipse.commons.gettingstarted.dashboard.ShowDashboardCommand"
          description="Show Dashboard"
          id="org.springsource.ide.eclipse.dashboard.command"
          name="Dashboard">
    </command> -->
 </extension>
 <extension
       point="org.eclipse.ui.menus">
    <menuContribution
          allPopups="false"
          locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
       <toolbar
             id="org.springsource.ide.eclipse.spring.toolbar"
             label="Spring Toolbar">
<!--          <command
                commandId="org.springsource.ide.eclipse.dashboard.command"
                icon="resources/icons/springsource.png"
                style="push"/> -->
          <command
                commandId="org.springsource.ide.eclipse.boot.launch.command"
                id="org.springsource.ide.eclipse.boot.launch.command.menu"
                icon="resources/icons/lrun_obj.gif"
                style="pulldown">
          </command>
       </toolbar>
    </menuContribution>
    <menuContribution
          locationURI="menu:org.springsource.ide.eclipse.boot.launch.command.menu">
       <dynamic
             class="org.springsource.ide.eclipse.commons.gettingstarted.boot.RelaunchMenuProvider"
             id="org.springsource.ide.eclipse.commons.gettingstarted.dynamic1">
       </dynamic>
    </menuContribution>
 </extension>
 
